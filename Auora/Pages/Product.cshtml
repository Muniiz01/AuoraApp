@page "{id}"
@model Auora.Pages.ProductModel
@{
    ViewData["Title"] = "Auora";
}
<div class="bg-body-tertiary w-100 p-4 rounded">
    <div class="d-flex flex-row justify-content-lg-between w-100 p-2">
        <div class="pg-prd-img ms-2">
            <img src="@Url.Content(Model.Produto.Images.FirstOrDefault())" alt="Alternate Text" />
        </div>
        <div class="pg-prd-mn me-5 bg-body-secondary p-4 rounded">
            <div>
                <span class="d-flex flex-row justify-content-between align-items-center">
                    <label class="fs-3 fw-semibold">@Model.Produto.Name</label>
                    <button class="btn btn-outline-danger rounded-circle d-flex p-1 justify-content-center align-items-center" style="width: 36px; height: 36px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                        </svg>
                    </button>
                </span>
                <p>@Model.Produto.Resume</p>
                <div id="rating" class="d-flex">
                    <i class="bi bi-star-fill fs-6 me-1" data-value="1"></i>
                    <i class="bi bi-star-fill fs-6 me-1" data-value="2"></i>
                    <i class="bi bi-star-fill fs-6 me-1" data-value="3"></i>
                    <i class="bi bi-star-fill fs-6 me-1" data-value="4"></i>
                    <i class="bi bi-star-fill fs-6 me-1" data-value="5"></i>
                </div>
            </div>
            <div class="pg-prd-seli w-100 h-100">
                <div class="d-flex flex-column align-items-center">
                    <p class="fs-3 w-25 h-25 text-center">$ @Model.Produto.Price</p>
                    <div class="d-flex gap-2 w-50">
                        <button class="btn text-light w-75" style="background-color: #8a8876;">Buy</button>
                        <button class="btn text-light w-25" style="background-color: #8a8876;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                            </svg>
                        </button>
                    </div>
                    
                </div>
                
            </div>
            
        </div>
    </div>

    <div class="mt-5">
        <h4>Details</h4>
        <p>@Model.Produto.Description</p>
    </div>

</div>




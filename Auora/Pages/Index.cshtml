@page
@model Auora.Pages.IndexModel

@{
    ViewData["Title"] = "Auora";
}



<div class="promotional-banner rounded d-flex text-light justify-content-between p-3">
    <div class="d-flex flex-column h-100 mt-4 ms-5 text-end" style="width: 15rem;">
        <h1 class="text-wrap text-end fw-bolder" style=" font-family: Merriweather, serif;">BEAUTY COSMETICS</h1>
        <p class="mt-1 fs-6 fw-bold"> SHOP NOW</p>
    </div>
    <div class="p-3 bg-light d-flex justify-content-center" style="width: 8rem; height: 4rem; border-radius: 60px; margin-top: 6rem; margin-left: 40rem;">
        <p class="text-dark fs-4">50% off</p>
    </div>
    <img src="~/media/img1.webp" class="img-1 mt-2 me-5" alt="Alternate Text" />
</div>

<div class="grade-cont d-flex mt-4 flex-row gap-4 justify-content-around">
    <div class="grade-mn video-player d-flex">
        <video class="video position-relative">
            <source src="/media/video/assets_task_01jzf9dwwte28sbetpqr79bfwh_task_01jzf9dwwte28sbetpqr79bfwh_genid_a9739723-fb19-4928-8041-d853879c368e_25_07_06_07_15_954118_videos_00000_469485053_source.mp4" type="video/mp4" />

        </video>
        <button type="button" class="controls__button btn toggleButton rounded-circle bg-light d-flex justify-content-center align-items-center position-absolute mt-2 ms-2" title="Toggle Play">►</button>
        <div class="blur-bubble">
            Feel the power of a bold lipstick
        </div>
    </div>

    <div class="grade-mn">
        <div class="grade-mn video-player d-flex">
            <video class="video position-relative">
                <source src="/media/video/assets_task_01jmhkrfrdex29nz4kfbgnqgty_task_01jmhkrfrdex29nz4kfbgnqgty_genid_54b764ea-7c93-4fed-9a24-0ae1a46378b2_25_02_20_12_02_930571_videos_00000_831329424_source.mp4" type="video/mp4" />

            </video>

            <button type="button" class="controls__button btn toggleButton rounded-circle bg-light d-flex justify-content-center align-items-center position-absolute mt-2 ms-2" title="Toggle Play">►</button>

            <div class="blur-bubble">
                5 Advices for your skincare routine
            </div>
        </div>
    </div>

    <div class="grade-mn">
        <div class="grade-mn video-player d-flex">
            <video class="video position-relative" autoplay>
                <source src="/media/video/assets_task_01k0kmr5cqfq0vvra8g6p6egc3_task_01k0kmr5cqfq0vvra8g6p6egc3_genid_4b5ca494-02c5-41ba-9bd9-21a154289654_25_07_20_10_06_900603_videos_00000_149272889_source.mp4" type="video/mp4" />

            </video>

            <button type="button" class="controls__button btn toggleButton rounded-circle bg-light d-flex justify-content-center align-items-center position-absolute mt-2 ms-2" title="Toggle Play">►</button>

            <div class="blur-bubble">
                Sustainable skincare routine
            </div>
        </div>
    </div>

    @if (Model.ProdutoDestaque != null){
    <div class="grade-mx d-flex flex-column justify-content-between">
            <img class=" grade-mx-img" src="@Url.Content(Model.ProdutoDestaque.Images.FirstOrDefault())" alt="Alternate Text" />
        <div class="d-flex flex-row justify-content-between p-3">
            <p class="blur-text">@Model.ProdutoDestaque.Name</p>

            <button type="button" class=" rounded-circle align-items-center border-0" style="width: 50px; height: 50px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                </svg>
            </button>
        </div>

        <div class="d-flex flex-row p-3 justify-content-between align-items-center">

            <div class="blur-buy d-flex flex-row justify-content-between align-items-center pe-2 w-50 h-100">
                <p class="mt-3">Buy Now</p>
                <button type="button" class="rounded-4 border-0" style="width: 45px; height: 45px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
                    </svg>
                </button>
            </div>

            <div class="p-2 d-flex rounded-4" style="width: 5rem; height: 3rem; background-color: #6a6854; color: white;">
                <p class="position-relative m-auto ">$ @Model.ProdutoDestaque.Price</p>
            </div>
        </div>
            
    </div>
    }
</div>


<div class="carousel-container w-100 mb-5 position-relative d-flex flex-column justify-content-center align-items-center carousel-dark">
    <div class="w-100 d-flex">
        <h1 class="m-5 me-4 fs-3 bolder">Highlights</h1>
    </div>
    <button class="carousel-control-prev custom-prev" type="button" data-bs-target="#multiItemCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <div id="multiItemCarousel" class="carousel slide noselect" data-bs-touch="true">
        <div class="carousel-inner">

            <!-- Primeiro slide -->
            <div class="carousel-item active">
                <div class="row">
                    @foreach (var produto in Model.Produtos.Take(4))
                    {
                        <div class="col-md-3 ">
                            <div class="card carousel-card">
                                <img src="@Url.Content(produto.Images.FirstOrDefault())" class="card-img-top img-fluid rounded" alt="@produto.Name" draggable="false">
                                <div class="card-img-overlay">
                                    <p class="carousel-card-title p-3 rounded text-nowrap">@produto.Name</p>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Segundo slide -->
            <div class="carousel-item">
                <div class="row">
                    @foreach (var produto in Model.Produtos.Skip(4).Take(4))
                    {
                        <div class="col-md-3">
                            <div class="card carousel-card">
                                <img src="@Url.Content(produto.Images.FirstOrDefault())" class="card-img-top img-fluid rounded" alt="@produto.Name" draggable="false">
                                <div class="card-img-overlay">
                                    <p class="carousel-card-title p-3 rounded text-nowrap">@produto.Name</p>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
    <button class="carousel-control-next custom-next" type="button" data-bs-target="#multiItemCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Grid item -->

<div class="container-grid d-flex flex-column ">
    <div class="w-100 d-flex">
        <h1 class="mt-5 ms-5 fs-3 bolder">Best sellers</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-4 g-5 m-auto" style="width: 93%;">

        @foreach (var produto in Model.Produtos)
        {
            <div class="col">
                <div class="card ">
                    <button class="position-absolute top-0 end-0 m-2 btn btn-outline-danger rounded-circle d-flex p-1 justify-content-center align-items-center" style="width: 36px; height: 36px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                        </svg>
                    </button>
                    <img src="@Url.Content(produto.Images.FirstOrDefault())" class="img-card-grid card-img-top img-fluid" alt="@produto.Name">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Name</h5>
                        <p class="card-text">@produto.Resume</p>
                        <div class="d-flex flex-row justify-content-between align-items-center" style="height: 3rem;">
                            <p class="fs-4 mt-3">$ @produto.Price</p>
                            <button href="#" class="btn"> add to cart</button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>




<script src="~/js/Index.js"></script>